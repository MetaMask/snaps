{
  "compilerOptions": {
    "composite": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["DOM", "ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "paths": {
      "@metamask/*/test-utils": [
        "../../../*/src/test-utils",
        "../../*/src/test-utils",
        "../*/src/test-utils"
      ],
      "@metamask/*": ["../../../*/src", "../../*/src", "../*/src"]
    },
    "resolveJsonModule": true,
    "strict": true,
    "target": "ES2020",
    "useUnknownInCatchVariables": false,
    "skipLibCheck": true,
    "emitDeclarationOnly": true,
    "declarationMap": true
  }
}
