  "references": [
    { "path": "../rpc-methods/tsconfig.build.json" },
    { "path": "../snaps-controllers/tsconfig.build.json" },
    { "path": "../snaps-utils/tsconfig.build.json" },
    { "path": "../snaps-ui/tsconfig.build.json" }
  ]
}
