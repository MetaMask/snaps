{
  "extends": "../../tsconfig.packages.json",
  "compilerOptions": {
    "composite": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": true,
    "lib": ["DOM", "ES2020"],
    "outDir": "dist",
    "rootDir": "src",
    "resolveJsonModule": true,
    "skipLibCheck": false,
    "typeRoots": [
      "../../node_modules/@types",
      "./node_modules/@types",
      "./src/types"
    ]
  },
  "include": ["./src/**/*.ts", "./src/**/*.json"],
  "exclude": ["./src/**/*.test.ts"]
}
